  "coq" {>= "8.13"}
  "coq-compcert" {>= "3.9"}
  "coq-elpi" {>= "1.9.5"}
]
build: [
  [ "./configure" "--cprinterdir=%{lib}%/dx" "--install-compcert-printer" ]
  [ make ]
]
